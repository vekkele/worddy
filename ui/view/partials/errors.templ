package partials

templ FieldError(field, message string) {
	if message != "" {
		<div data-field-error={field} class="mt-3 text-red-500">{ message }</div>
	}
}

templ FormError(message string) {
	if message != "" {
		<div data-form-error class="px-4 py-3 text-red-800 bg-red-300 rounded-lg">{ message }</div>
	}
}
